{
  "name": "agentcloak",
  "private": true,
  "version": "0.1.0",
  "description": "Source-available proxy that sits between AI agents and email, filtering sensitive content",
  "license": "BSL-1.1",
  "author": "Ryan French",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanfren/AgentCloak.git"
  },
  "homepage": "https://github.com/ryanfren/AgentCloak#readme",
  "keywords": [
    "email",
    "mcp",
    "ai-agents",
    "security",
    "privacy",
    "pii-redaction",
    "model-context-protocol"
  ],
  "scripts": {
    "dev": "pnpm --filter @agentcloak/server dev",
    "dev:web": "pnpm --filter @agentcloak/web dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @agentcloak/web build",
    "test": "pnpm -C packages/server test"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild"]
  },
  "engines": {
    "node": ">=20"
  }
}
